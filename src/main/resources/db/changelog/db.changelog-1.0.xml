		<rollback>
			<delete tableName="return_periods"></delete>
		</rollback>
	</changeSet>

  <changeSet id="update-nulls: return_periods" author="Environment Agency">
    <update tableName="return_periods">
      <column name="definition"/>
      <where>definition = ''</where>
    </update>
    <update tableName="return_periods">
      <column name="example"/>
      <where>example = ''</where>
