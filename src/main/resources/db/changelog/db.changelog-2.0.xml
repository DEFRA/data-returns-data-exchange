<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
        

	<preConditions>
		<dbms type="${db.type}"/>
		<runningAs username="${db.username}"/>
	</preConditions>

	<changeSet id="submission data" author="Environment Agency">

		<!--
		****************************************************************
		User
		****************************************************************
		-->
		<createTable tableName="user">
			<column name="id" type="bigserial">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="name" type="varchar(80)">
				<constraints nullable="false"/>
			</column>
		</createTable>

		<createIndex indexName="idx_user_name" tableName="user" unique="true">
			<column name="name"/>
		</createIndex>

		<!--
		****************************************************************
		Status
		****************************************************************
		-->
		<createTable tableName="status">
			<column name="id" type="bigserial">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="status" type="varchar(80)">
				<constraints nullable="false" unique="true"/>
			</column>
		</createTable>

		<!--
		****************************************************************
		Submission
		****************************************************************
		-->
		<createTable tableName="submission">

			<column name="dataset_id" type="varchar(80)">
				<constraints nullable="false"/>
			</column>

			<column name="user_id" type="bigserial">
				<constraints nullable="false" unique="false"/>
			</column>

			<column name="record_id" type="varchar(80)">
				<constraints nullable="false"/>
			</column>

			<column name="status_id" type="bigserial">
				<constraints nullable="false"/>
			</column>

			<column name="create_date" type="timestamp with time zone">
				<constraints nullable="false"/>
			</column>

			<column name="last_change_date" type="timestamp with time zone">
				<constraints nullable="false"/>
			</column>

			<column name="etag" type="bytea">
				<constraints nullable="false"/>
			</column>

			<column name="ea_id" type="bigserial">
				<constraints nullable="false"/>
			</column>

			<column name="site_id" type="bigserial">
				<constraints nullable="false"/>
			</column>

			<column name="rtn_type_id" type="bigserial">
				<constraints nullable="false"/>
			</column>

			<column name="mon_date" type="timestamp with time zone">
				<constraints nullable="false"/>
			</column>

			<column name="mon_point" type="varchar(50)">
				<constraints nullable="false"/>
			</column>

			<column name="parameter_id" type="bigserial">
				<constraints nullable="false"/>
			</column>

		</createTable>

		<createIndex indexName="idx_submission" tableName="submission" unique="true">
			<column name="dataset_id"/>
			<column name="user_id"/>
			<column name="record_id"/>
		</createIndex>

		<addForeignKeyConstraint baseColumnNames="user_id"
														 baseTableName="submission"
														 constraintName="fk_submission_user"
														 referencedColumnNames="id"
														 referencedTableName="user"/>

		<addForeignKeyConstraint baseColumnNames="status_id"
														 baseTableName="submission"
														 constraintName="fk_submission_status"
														 referencedColumnNames="id"
														 referencedTableName="status"/>

		<addForeignKeyConstraint baseColumnNames="ea_id"
														 baseTableName="submission"
														 constraintName="fk_submission_unique_identifier"
														 referencedColumnNames="id"
														 referencedTableName="unique_identifiers"/>

		<addForeignKeyConstraint baseColumnNames="site_id"
														 baseTableName="submission"
														 constraintName="fk_submission_site"
														 referencedColumnNames="id"
														 referencedTableName="sites"/>

		<addForeignKeyConstraint baseColumnNames="rtn_type_id"
														 baseTableName="submission"
														 constraintName="fk_submission_rtn_type"
														 referencedColumnNames="id"
														 referencedTableName="return_types"/>

		<addForeignKeyConstraint baseColumnNames="parameter_id"
														 baseTableName="submission"
														 constraintName="fk_submission_parameter"
														 referencedColumnNames="id"
														 referencedTableName="parameters"/>

		<rollback>
			<dropTable tableName="submission"/>
			<dropTable tableName="status"/>
			<dropTable tableName="user"/>
		</rollback>

	</changeSet>

</databaseChangeLog>