<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           xmlns:lgm="http://ea.gov.uk/DR/LGM" 
           attributeFormDefault="unqualified"
           elementFormDefault="qualified">

    <!-- Type definitions in separate files -->
    <xs:include schemaLocation="includes/StringTypes.xsd" />
    <xs:include schemaLocation="includes/MeasurePeriodList.xsd" />
    <xs:include schemaLocation="includes/Dates.xsd" />
    <xs:include schemaLocation="includes/ReturnType.xsd" />
    <xs:include schemaLocation="includes/UnitType.xsd" />
    <xs:include schemaLocation="includes/TestMethodType.xsd" />
    <xs:include schemaLocation="includes/ParameterType.xsd" />
    <xs:include schemaLocation="includes/CiCType.xsd" />

    <xs:element name="returns">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="return" maxOccurs="unbounded" minOccurs="1">
                    <xs:complexType>
                        <xs:all>
							<!-- TODO only core columns used for Part 1, set all types correctly -->
                            <xs:element type="LFG_Required_String" name="EA_ID"/>
                            <xs:element type="LFG_OptionalStringMax255" name="Site_Name"/>
                            <xs:element type="LFG_returnType" name="Rtn_Type"/>
                            <xs:element type="LFG_DateTime" name="Mon_Date"/>
                            <xs:element type="LFG_optionalValidDateTime" name="Mon_Date_End"/>
                            <xs:element type="LFG_OptionalStringMax255" name="Mon_Period"/> 
                            <xs:element type="LFG_OptionalStringMax255" name="Smpl_Ref"/>
                            <xs:element type="LFG_OptionalStringMax255" name="Smpl_By"/>
                            <xs:element type="LFG_Required_String" name="Mon_Point"/>
                            <xs:element type="LFG_Required_String" name="Parameter"/>
                            <xs:element type="LFG_mandatoryValueTypeMax30" name="Value"/>
                            <xs:element type="LFG_OptionalStringMax255" name="Txt_Value"/>
                            <xs:element type="LFG_unitType" name="Unit"/>
                            <xs:element type="LFG_OptionalStringMax255" name="Ref_Period"/>
                            <xs:element type="LFG_OptionalStringMax255" name="Meth_Stand"/>
                            <xs:element type="LFG_OptionalStringMax255" name="Comments"/>
                            <xs:element type="LFG_OptionalStringMax255" name="CiC"/>
                            <xs:element type="LFG_OptionalStringMax255" name="CAS"/>
                            <xs:element type="LFG_OptionalStringMax255" name="RD_Code"/> 
                        </xs:all>
                        <xs:attribute type="xs:integer" name="srcId" use="optional"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>